---
interface Company {
  name: string;
  link: string;
}

interface Props {
  role: string;
  company: Company;
  start: string;
  end: string;
  points: string[];
}

const { role, company, start, end, points } = Astro.props
---

<li class="mb-10 ms-4">
    <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
  <time class="mb-1 text-sm font-normal leading-none text-muted dark:text-muteddark">
    {start} - {end}
  </time>
  <h3 class="mb-1 text-xl font-bold text-txt dark:text-txtdark">
    {role} @ <a href={company.link} class="text-accent dark:text-accentdark">{company.name}</span>
  </h3>
    <ul class="list-inside list-disc mb-4 text-sm font-normal text-txt dark:text-txtdark">
    {points.map(point => (
      <li class="mb-1">
        {point}
      </li>
    ))}
    </ul>
</li>
