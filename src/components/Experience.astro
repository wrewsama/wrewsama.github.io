---
interface Props {
  role: string;
  company: string;
  start: string;
  end: string;
  points: string[];
}

const { role, company, start, end, points } = Astro.props
---

<li class="mb-10 ms-4">
    <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
  <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{start} - {end}</time>
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{role} @ {company}</h3>
    <ul class="list-inside list-disc mb-4 text-base font-normal text-gray-500 dark:text-gray-400">
    {points.map(point => (
      <li>
        {point}
      </li>
    ))}
    </ul>
</li>
